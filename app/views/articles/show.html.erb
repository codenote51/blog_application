
<h1><%= @article.title %></h1>

<p><%= @article.body.to_yaml %></p>

<ol>
  <li>
    <%= link_to "Edit", edit_article_path(@article) %>
  </li>
  <li>
    <%= link_to "Destroy", article_path(@article), data: 
      {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } 
    %>   
  </li>
</ol>
<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

