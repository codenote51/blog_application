<%= form_with model: @bank do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% bank.errors.full_messages_for(:name).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :lastname %><br>
    <%= form.text_field :lastname %><br>
    <% bank.errors.full_messages_for(:lastname).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %><br>
    <% bank.errors.full_messages_for(:email).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :city %><br>
    <%= form.text_field :city %><br>
    <% bank.errors.full_messages_for(:city).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :pin %><br>
    <%= form.password_field :pin %><br>
    <% bank.errors.full_messages_for(:pin).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :age %><br>
    <%= form.text_field :age %><br>
    <% bank.errors.full_messages_for(:age).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
